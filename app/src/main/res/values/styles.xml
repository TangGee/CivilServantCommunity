<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="TransparentTheme" parent="MyAppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- 单选的Layout -->
    <style name="MultiLineChooseItemTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_backgroundColor">#FFFFFF</item>
        <item name="item_selectedTextColor">#FFFFFF</item>
        <item name="item_selectedBackgroundColor">#00A8FF</item>
        <item name="item_textSize">13sp</item>
        <item name="item_horizontalSpacing">5dp</item>
        <item name="item_verticalSpacing">5dp</item>
        <item name="item_horizontalPadding">12dp</item>
        <item name="item_verticalPadding">3dp</item>
        <item name="item_radius">5dp</item>
        <item name="item_selectedStrokeColor">#00A8FF</item>
        <item name="item_strokeColor">#00A8FF</item>
        <item name="item_strokeWidth">1dp</item>
        <item name="item_singleLine">true</item>
        <item name="item_width">85</item>
        <item name="item_height">30</item>
        <!--单选-->
        <item name="item_multiChooseable">false</item>
    </style>

    <!-- 多选的Layout -->
    <style name="MultiLineItemTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_backgroundColor">#FFFFFF</item>
        <item name="item_selectedTextColor">#FFFFFF</item>
        <item name="item_selectedBackgroundColor">#00A8FF</item>
        <item name="item_textSize">13sp</item>
        <item name="item_horizontalSpacing">5dp</item>
        <item name="item_verticalSpacing">5dp</item>
        <item name="item_horizontalPadding">12dp</item>
        <item name="item_verticalPadding">3dp</item>
        <item name="item_radius">5dp</item>
        <item name="item_selectedStrokeColor">#00A8FF</item>
        <item name="item_strokeColor">#00A8FF</item>
        <item name="item_strokeWidth">1dp</item>
        <item name="item_singleLine">true</item>
        <item name="item_width">85</item>
        <item name="item_height">30</item>
        <item name="item_multiChooseable">true</item>
    </style>

    <style name="MainFeedTodayPlanCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_600</item>
        <item name="colorControlActivated">@color/blue_500</item>
    </style>
</resources>
