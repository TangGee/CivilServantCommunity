<?xml version="1.0" encoding="utf-8"?>
<com.mdove.dependent.common.view.roundcorner.RoundCornerLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/edit_plan_module_margin"
    android:layout_marginLeft="@dimen/edit_plan_module_margin"
    android:layout_marginRight="@dimen/edit_plan_module_margin"
    android:background="@color/grey_200"
    android:orientation="horizontal"
    app:allRadius="8dp">

    <EditText
        android:id="@+id/tv_plan_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edit_plan_module_inner_margin"
        android:background="@null"
        android:text="计划描述"
        android:layout_gravity="center"
        android:textColor="@color/grey_600"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="@dimen/edit_plan_module_inner_margin"
        android:tint="@color/grey_600"
        android:layout_gravity="center"
        app:srcCompat="@drawable/vector_bg_plan_btn_edit" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/edit_plan_module_inner_margin"
        android:tint="@color/grey_600"
        app:srcCompat="@drawable/vector_bg_delete" />

</com.mdove.dependent.common.view.roundcorner.RoundCornerLinearlayout>