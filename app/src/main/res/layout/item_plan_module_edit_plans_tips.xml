<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/edit_plan_module_margin"
    android:orientation="horizontal"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_alert"
        android:layout_width="26dp"
        app:srcCompat="@drawable/vector_ic_alert"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:tint="@color/grey_600"
        android:layout_height="26dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/main_feed_item_margin"
        android:layout_marginLeft="@dimen/main_feed_item_margin"
        android:padding="8dp"
        android:lineSpacingExtra="4dp"
        android:background="@drawable/bg_round_white_t90_12"
        android:gravity="center"
        android:text="你可以基于系统推荐的计划；自行修改，制定符合你的计划，让今天的提升事半功倍哟~"
        android:textColor="@color/grey_800"
        android:textSize="16dp" />
</LinearLayout>