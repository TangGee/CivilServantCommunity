<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:gravity="left"
        android:text="xxx"
        android:textColor="@color/blue_500"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:text="时间"
        android:textColor="@color/grey_500"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="公务员公务员公务员公务员公务员公务员公务员公务员公务员"
        android:textColor="@color/grey_700"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_go"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:background="@drawable/bg_round_grey_200"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="XXX：回复"
        android:textColor="@color/grey_600"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_go"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginRight="@dimen/margin_item_question_answer_layout" />

    <TextView
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:text="详情"
        android:textColor="#8a8a8a"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_answer"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/btn_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:text="回复"
        android:textColor="#8a8a8a"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_answer"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer" />

</androidx.constraintlayout.widget.ConstraintLayout>
