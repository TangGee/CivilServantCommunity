<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_main_feed_start_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mdove.dependent.common.view.roundcorner.RoundCornerConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_feed_item_margin"
        android:layout_marginTop="@dimen/main_feed_item_margin"
        android:layout_marginRight="@dimen/main_feed_item_margin"
        android:background="@color/white"
        app:allRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/layout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="快捷操作"
            android:textColor="@color/grey_600"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/layout_btn_plan"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tv">

            <FrameLayout
                android:id="@+id/layout_iv_plan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_main_feed_btn_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_plan"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/vector_btn_main_feed_plan" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_title_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:text="复习计划"
                android:textColor="@color/grey_800"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_iv_plan" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn_punch"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/layout_btn_plan"
            app:layout_constraintTop_toTopOf="@+id/layout_btn_plan">

            <FrameLayout
                android:id="@+id/layout_iv_punch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_main_feed_btn_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_punch"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/vector_btn_main_feed_punch" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_title_punch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:text="今日打卡"
                android:textColor="@color/grey_800"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_iv_punch" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/layout_btn_punch"
            app:layout_constraintTop_toTopOf="@+id/layout_btn_plan">

            <FrameLayout
                android:id="@+id/layout_iv_me"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_main_feed_btn_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_me"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/vector_btn_main_feed_me" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_title_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:text="我的主页"
                android:textColor="@color/grey_800"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_iv_me" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn_ugc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/layout_btn_me"
            app:layout_constraintTop_toTopOf="@+id/layout_btn_plan">

            <FrameLayout
                android:id="@+id/layout_iv_ugc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_main_feed_btn_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_ugc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/vector_btn_question" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_title_ugc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:text="求助大神"
                android:textColor="@color/grey_800"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_iv_ugc" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn_time_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/layout_btn_ugc"
            app:layout_constraintTop_toTopOf="@+id/layout_btn_plan">

            <FrameLayout
                android:id="@+id/layout_iv_schedule"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_main_feed_btn_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_schedule"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/vector_btn_time_schedule" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_title_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:text="时间管理"
                android:textColor="@color/grey_800"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_iv_schedule" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.mdove.dependent.common.view.roundcorner.RoundCornerConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
