<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.8"
        android:layout_marginLeft="24dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/score_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="评分"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/black_a8"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        app:layout_constraintBottom_toTopOf="@+id/score_line"
        />

    <TextView
        android:id="@+id/score_line"
        android:layout_width="12dp"
        android:layout_height="2dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/tv_score"
        app:layout_constraintRight_toRightOf="@+id/tv_score"
        app:layout_constraintBottom_toTopOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_score" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/string_edit_plan_score_tv_tips"
        android:textColor="@color/black_a8"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_tips_1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_score"
        app:layout_constraintTop_toBottomOf="@+id/score_line" />

    <TextView
        android:id="@+id/tv_tips_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="数名上岸老铁联手制定的日常计划。"
        android:textColor="@color/black_a8"
        android:textSize="14dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/tv_tips_2"
        app:layout_constraintLeft_toRightOf="@+id/sc_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <com.mdove.dependent.common.view.roundcorner.RoundCornerView
        android:id="@+id/sc_1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@color/black_a8"
        app:allRadius="1dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tips_1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_tips_1" />

    <TextView
        android:id="@+id/tv_tips_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:text="999+网友应用且称赞。"
        android:textColor="@color/black_a8"
        android:textSize="14dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sc_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips_1" />

    <com.mdove.dependent.common.view.roundcorner.RoundCornerView
        android:id="@+id/sc_2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@color/black_a8"
        app:allRadius="1dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tips_2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_tips_2" />

</androidx.constraintlayout.widget.ConstraintLayout>