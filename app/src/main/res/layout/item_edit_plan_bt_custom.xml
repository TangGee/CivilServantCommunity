<?xml version="1.0" encoding="utf-8"?>
<com.mdove.dependent.common.view.roundcorner.RoundCornerLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:gravity="center"
    android:background="@color/white_trans90"
    android:orientation="horizontal"
    app:allRadius="8dp">

    <EditText
        android:id="@+id/et_plans"
        android:layout_width="0dp"
        android:background="@null"
        android:layout_weight="1"
        android:textSize="16dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="8dp"
        android:textColor="@color/black_ac"
        android:hint="记下今天的计划~"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_ugc"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:tint="@color/black_ac"
        android:layout_marginRight="@dimen/default_margin"
        app:srcCompat="@drawable/vector_btn_ugc" />

</com.mdove.dependent.common.view.roundcorner.RoundCornerLinearlayout>