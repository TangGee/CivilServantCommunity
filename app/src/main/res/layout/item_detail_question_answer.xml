<?xml version="1.0" encoding="utf-8"?>
<com.mdove.dependent.common.view.roundcorner.RoundCornerConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:background="@color/color_item_default_bg"
    app:allRadius="8dp">

    <TextView
        android:id="@+id/layout_fake"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:background="@drawable/bg_circle_blue_30"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="假装有图"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:gravity="left"
        android:text="xxx"
        android:textColor="@color/blue_500"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/layout_fake"
        app:layout_constraintTop_toTopOf="@+id/layout_fake"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:text="时间"
        android:textColor="@color/grey_500"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_fake"
        app:layout_constraintLeft_toRightOf="@+id/layout_fake" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="公务员公务员公务员公务员公务员公务员公务员公务员公务员"
        android:textColor="@color/black_aa"
        android:textSize="14dp"
        app:layout_goneMarginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_answer"
        app:layout_constraintLeft_toRightOf="@+id/layout_fake"
        app:layout_constraintRight_toLeftOf="@+id/btn_go"
        app:layout_constraintTop_toBottomOf="@+id/layout_fake"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_item_question_answer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_round_grey_300"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="XXX：回复"
        android:textColor="@color/grey_600"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layout_fake"
        app:layout_constraintRight_toLeftOf="@+id/btn_go"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginRight="@dimen/margin_item_question_answer_layout" />

    <TextView
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:text="详情"
        android:textColor="#8a8a8a"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_answer"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/btn_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_item_question_answer_layout"
        android:text="回复"
        android:textColor="#8a8a8a"
        android:textSize="14sp"
        app:layout_goneMarginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_answer"
        app:layout_constraintRight_toRightOf="parent" />
</com.mdove.dependent.common.view.roundcorner.RoundCornerConstraintLayout>
