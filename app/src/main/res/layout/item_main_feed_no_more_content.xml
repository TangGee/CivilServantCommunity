<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_loading"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/vector_no_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:tint="@color/white"
        />

    <com.mdove.dependent.common.view.roundcorner.RoundCornerConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_item_default_bg"
        app:allRadius="8dp">

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有更多的内容..."
            android:textColor="@color/black_ac"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/btn_go_ugc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_go_ugc"
            android:textSize="12sp"
            android:textColor="@color/grey_600"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loading"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="前往发文，为我们的社区增加更多有趣的内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.mdove.dependent.common.view.roundcorner.RoundCornerConstraintLayout>

</LinearLayout>

